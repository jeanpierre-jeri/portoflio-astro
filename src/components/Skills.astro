---
import Heading from "./Heading.astro";
import skills from "../../db/skills";
---

<section class="mt-32">
  <div class="text-center">
    <Heading>Skills</Heading>
  </div>

  <div class="flex flex-wrap gap-28 mt-8 justify-center">
    {
      skills.map((skill) => (
        <div class="flex flex-col gap-5">
          <img
            src={skill.image}
            loading="lazy"
            alt={skill.name}
            class="flex-1 w-28 h-28 object-contain"
          />
          <p class="text-center uppercase text-base font-normal tracking-widest">
            {skill.name}
          </p>
        </div>
      ))
    }
  </div>
</section>
